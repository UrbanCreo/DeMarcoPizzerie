@model IEnumerable<DeMarco.Models.NonAlcoholicDrink>

@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="text-center">
        <!-- MENU design -->
        <nav class="nav nav-pills nav-fill">
            <a class="nav-link active" asp-area="" asp-controller="Pizzas" asp-action="Index">Pizza</a>
            <a class="nav-link active" asp-area="" asp-controller="Pastas" asp-action="Index">Těstoviny</a>
            <a class="nav-link active" asp-area="" asp-controller="Foods" asp-action="Index">Minutky</a>
            <a class="nav-link active" asp-area="" asp-controller="Fries" asp-action="Index">Přílohy</a>
            <a class="nav-link active" asp-area="" asp-controller="Addons" asp-action="Index">Přídavky</a>
            <a class="nav-link active" asp-area="" asp-controller="AlcoholicDrinks" asp-action="Index">Alkoholické Nápoje</a>
            <a class="nav-link active" asp-area="" asp-controller="NonAlcoholicDrinks" asp-action="Index">Nealkoholické Nápoje</a>
        </nav>
        <br />
    </div>
</div>

<h1>Nealkoholické nápoje</h1>

<p>
    <a asp-action="Create">Vytvořit nový</a> |
    <a asp-area="" asp-controller="Home" asp-action="Admin">Zpět</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumberItem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumberItem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImagePath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editovat</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Odstranit</a> |
                <a asp-action="Hide" asp-route-id="@item.Id" method="post"><i class='bx bx-hide'></i></a> |
                <a asp-action="Unhide" asp-route-id="@item.Id" method="post"><i class='bx bx-show'></i></a> |
            </td>
        </tr>
}
    </tbody>
</table>
